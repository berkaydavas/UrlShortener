@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "E-posta doğrulaması gönder";
}

<h1>@ViewData["Title"]</h1>

<section class="mt-5">
  <p>E-postanızı giriniz.</p>

  <hr />
  
  <form method="post">
    <div asp-validation-summary="All" class="text-danger" role="alert"></div>
    <div class="form-floating mb-3">
      <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="name@example.com" />
      <label asp-for="Input.Email" class="form-label">E-posta</label>
      <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <button type="submit" class="w-100 btn btn-lg btn-primary">Yeniden Gönder</button>
  </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
