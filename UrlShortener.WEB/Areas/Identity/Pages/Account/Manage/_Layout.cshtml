@{
  if (ViewData.TryGetValue("ParentLayout", out var parentLayout) && parentLayout != null)
  {
    Layout = parentLayout.ToString();
  }
  else
  {
    Layout = "_Layout";
  }
}

<h1>Hesap Detayları</h1>

<section class="mt-5">
  <div class="row">
    <div class="col-md-3">
      <partial name="_ManageNav" />
    </div>
    <div class="col-md-9">
      @RenderBody()
    </div>
  </div>
</section>

@section Scripts {
  @RenderSection("Scripts", required: false)
}
