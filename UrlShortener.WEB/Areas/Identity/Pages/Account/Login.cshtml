@page
@model LoginModel

@{
    ViewData["Title"] = "Oturum aç";
}

<h1>@ViewData["Title"]</h1>

<section class="mt-5">
  <p>Oturum açmak için yerel bir hesap kullanın.</p>
  <hr />

  <form id="account" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
    <div class="form-floating mb-3">
      <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
      <label asp-for="Input.Email" class="form-label">E-posta</label>
      <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
      <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
      <label asp-for="Input.Password" class="form-label">Parola</label>
      <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <div class="form-check mb-3">
      <label asp-for="Input.RememberMe" class="form-check-label">
        <input class="form-check-input" asp-for="Input.RememberMe" />
        Beni hatırla?
      </label>
    </div>
    <div>
      <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Giriş Yap</button>
    </div>
    <div class="mt-3">
      <p>
        <a id="forgot-password" asp-page="./ForgotPassword">Şifreni mi unuttun?</a>
      </p>
      <p>
        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Yeni kullanıcı oluştur.</a>
      </p>
      <p>
        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">E-posta doğrulamasını tekrar gönder.</a>
      </p>
    </div>
  </form>
</section>

