@model UrlShortener.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Parolanızı mı unuttunuz?";
}

@section Styles {
    <link href="~/Content/assets/css/login.css" rel="stylesheet" />
}

@using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-signin", role = "form" }))
{
    @Html.AntiForgeryToken()

    <h2>@ViewBag.Title</h2>
    <hr />

    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

    <div class="inputs">
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email", placeholder = Html.DisplayNameFor(m => m.Email), required = "required", autofocus = "autofocus" })
    </div>

    <button class="w-100 btn btn-lg btn-primary mt-3" type="submit">Gönder</button>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
